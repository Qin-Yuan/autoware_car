<launch>
  <arg name="input_vehicle_velocity_topic" default="velocity_status"/>
  <arg name="output_twist_with_covariance" default="twist_with_covariance"/>
  <arg name="config_file" default="$(find-pkg-share autoware_vehicle_velocity_converter)/config/autoware_vehicle_velocity_converter.param.yaml"/>

  <node pkg="autoware_vehicle_velocity_converter" exec="autoware_vehicle_velocity_converter" name="vehicle_velocity_converter_node" output="screen">
    <param from="$(var config_file)"/>
    <remap from="velocity_status" to="$(var input_vehicle_velocity_topic)"/>
    <remap from="twist_with_covariance" to="$(var output_twist_with_covariance)"/>
  </node>
</launch>
